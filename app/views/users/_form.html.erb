<div class="container">
<%= render 'assests/validation',obj: @user%>
<%= form_with(model: @user, data: {turbo:false})  do |f| %>
  
    <p>
      <%= f.label :username  %><br/>
      <%= f.text_field :username %>
    </p>
  
    <p>
      <%= f.label :email %><br/>
      <%= f.text_field :email %>
    </p>

    <p>
        <%= f.label :password %><br/>
        <%= f.text_field :password %>
    </p>
  
    <p>
      <%= f.submit(@user.new_record? ? "Sign up" : "Update account") %>
    </p>
  
<% end %>
       <div class="mb-3">    
            <%= link_to '[ Cancel and Return to assets listing ]' , assests_path,class:"text-info" %>
      </div> 

</div>