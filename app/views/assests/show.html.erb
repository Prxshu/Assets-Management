<h1>Assests Details</h1>

<div class="card-header font-italic">
          by <%= @assest.user.username if @assest.user %>
          <%= link_to gravatar_for(@assest.user), user_path(@assest.user) %>
</div>
<p><strong>Asset Name: </strong><%= @assest.assest_name%></p>
<p><strong>Serial number: </strong><%= @assest.serial_no%></p>
<p><strong>Asset Category: </strong><%= @assest.category%></p>
<p><strong>Asset Ammount: </strong><%= @assest.aesset_ammount%></p>
<p><strong>Asset Department: </strong><%= @assest.department%></p>
<p><strong>Asset Description: </strong><%= @assest.description%></p>
<% if logged_in? && @assest.user == current_user %>
    <%= link_to "Edit", edit_assest_path(@assest), class: "btn btn-outline-info" %>
    <%= link_to "Delete", assest_path(@assest), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
<% end %>

<%= link_to 'Return to assets listing' , assests_path%>






